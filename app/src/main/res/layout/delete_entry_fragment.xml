<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="doItAgainActivity"
            type="at.bwappsandmore.doitagain.room.DoItAgainEntity" />

        <variable
            name="viewModel"
            type="at.bwappsandmore.doitagain.viewModel.SharedViewModel" />
    </data>

<LinearLayout

    android:id="@+id/fragment_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_dark"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/resetIB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_blue_dark"
        android:src="@drawable/ic_delete_forever_white_24dp"
        android:onClick="@{() -> viewModel.deleteDoItAgainActivity(doItAgainActivity)}"
        tools:ignore="ContentDescription" />

</LinearLayout>
</layout>